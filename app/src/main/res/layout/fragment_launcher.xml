            android:id="@+id/btn_contact6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:text="Long press to pick/replace a contact." />

    </FrameLayout>

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="1dp"
        android:background="@android:color/white"
        android:elevation="2dp"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1">

        <Button
            style="@style/launcher_button.green"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Phone"
            android:drawableTop="@drawable/phone_background"
            />

    </FrameLayout>

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="1dp"
        android:elevation="2dp"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1">

        <Button
            style="@style/launcher_button.red"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableTop="@drawable/sos_background"
            android:text="S.O.S" />

    </FrameLayout>

</android.support.v7.widget.GridLayout>